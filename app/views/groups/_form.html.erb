<%= form_for (@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% @group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :groupname %><br>
    <%= f.text_field :groupname %>
  </div>
  <div class="field">
    <%= f.label :year %><br>
    <%= f.number_field :year %>
  </div>
  
  <div class="field">
    <%= f.fields_for :member do |m| %>
  	<%= m.label :name %> <br/>
	<%= m.collection_select :name, $members, :id, :name, {:include_blank =>'Select a member' } %>
	
	
	
	<% end %>
  </div>	
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
