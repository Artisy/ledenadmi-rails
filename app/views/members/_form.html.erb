<%= form_for(@member) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :lastname %><br>
    <%= f.text_field :lastname %>
  </div>
  <div class="field">
    <%= f.label :dob, "Date of Birth" %><br>
    <%= f.date_select :dob,:order => [:day, :month, :year], :start_year => 1985, :end_year => 2000   %>
  </div>
  <div class="field">
    <%= f.label :street %><br>
    <%= f.text_field :street %>
  </div>
  <div class="field">
    <%= f.label :housenumber %><br>
    <%= f.number_field :housenumber %>
  </div>
  <div class="field">
    <%= f.label :zipcode %><br>
    <%= f.text_field :zipcode %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :emailaddress %><br>
    <%= f.email_field :emailaddress %>
  </div>
  <div class="field">
    <%= f.label :phonenumber %><br>
    <%= f.telephone_field :phonenumber %>
  </div>
  <div class="field">
    <%= f.label :member_since %><br>
    <%= f.date_select :member_since , :start_year => 2014, :discard_day => true, :discard_month => true%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
